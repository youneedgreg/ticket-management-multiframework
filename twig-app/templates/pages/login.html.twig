{% extends "layouts/base.html.twig" %}

{% block title %}Login - TicketFlow{% endblock %}

{% block content %}
<div class="auth-page">
    <div class="auth-container">
        <div class="auth-box">
            <div class="auth-header">
                <a href="/" class="auth-logo">ðŸŽ« TicketFlow</a>
                <h1>Welcome Back</h1>
                <p>Login to manage your tickets</p>
            </div>

            <form class="auth-form" method="POST" action="/auth/login">
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        value="{{ old.email ?? '' }}"
                        placeholder="Enter your email"
                        class="{% if errors.email %}error{% endif %}"
                    />
                    {% if errors.email %}
                        <span class="error-message">{{ errors.email }}</span>
                    {% endif %}
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input
                        type="password"
                        id="password"
                        name="password"
                        placeholder="Enter your password"
                        class="{% if errors.password %}error{% endif %}"
                    />
                    {% if errors.password %}
                        <span class="error-message">{{ errors.password }}</span>
                    {% endif %}
                </div>

                <button type="submit" class="btn btn-primary btn-full">
                    Login
                </button>
            </form>

            <div class="auth-footer">
                <p>
                    Don't have an account?
                    <a href="/auth/signup" class="auth-link">Sign up</a>
                </p>
            </div>
        </div>

        <div class="auth-info">
            <h2>Manage Tickets Efficiently</h2>
            <p>Track, organize, and resolve tickets with ease using TicketFlow.</p>
            <div class="auth-features">
                <div class="auth-feature">âœ“ Easy ticket management</div>
                <div class="auth-feature">âœ“ Real-time updates</div>
                <div class="auth-feature">âœ“ Secure and reliable</div>
            </div>
        </div>
    </div>
</div>
{% endblock %}