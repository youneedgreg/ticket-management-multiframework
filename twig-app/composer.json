{
    "name": "ticketflow/twig-app",
    "description": "Ticket Management System with Twig",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "twig/twig": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"echo 'Generating autoload files...';\""
        ],
        "post-update-cmd": [
            "@php -r \"echo 'Generating autoload files...';\""
        ]
    }
}
